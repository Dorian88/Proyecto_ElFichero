<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            >



            <android.support.v7.widget.Toolbar
                android:id="@+id/my_awesome_toolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:background="#000000"
                >
            </android.support.v7.widget.Toolbar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textStyle="bold"
                android:id="@+id/titulo"
                android:textColor="#ffff0045"
                android:textSize="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="103dp"
                android:layout_below="@+id/my_awesome_toolbar"
                android:paddingTop="15dp"
                android:layout_alignParentTop="false"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo2"
                android:textStyle="bold"
                android:id="@+id/titulo2"
                android:layout_alignTop="@+id/titulo"
                android:layout_toRightOf="@+id/titulo"
                android:layout_toEndOf="@+id/titulo"
                android:textColor="#ff000000"
                android:textSize="30dp"
                android:paddingTop="15dp" />

            <TextView
                android:id="@+id/detail_item_text_user"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Slashdot"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:linksClickable="true"
                android:autoLink="web"
                android:layout_below="@+id/detail_item_text_created_at"
                android:layout_centerHorizontal="true"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/detail_item_text_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 minutes ago"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/secondary_text_light"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/detail_item_text_message"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:linksClickable="false"
                android:text="Android just became the #1 OS on the planet.
Take that, Microsoft! http://t.co/123"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/detail_item_text_user"
                android:layout_centerHorizontal="true"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_below="@+id/titulo"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>